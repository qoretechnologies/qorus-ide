// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}", "--inspect-port=0"],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "npm: watch",
      "localRoot": "../${workspaceFolder}/qorus/",
      "debugWebviews": true,
      "sourceMaps": true,
      "trace": true
    },
    {
      "name": "Hosted Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}", "--inspect-port=0"],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "npm: watch",
      "localRoot": "../${workspaceFolder}/qorus/",
      "env": {
        "QORUS_CAPTIVE_URL": "https://hq.qoretechnologies.com:8092/",
        "QORUS_AUTH_TOKEN": "cd37d3ce-7973-4112-bb5b-1dccb9ca7494"
      },
      "debugWebviews": true,
      "sourceMaps": true,
      "trace": true
    }
  ]
}
