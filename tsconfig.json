{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "lib": ["es7", "dom"],
        "sourceMap": true,
        "moduleResolution": "node",
        "rootDir": "./web",
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": true,
        "jsx": "react",
        "types": ["node", "react", "react-dom", "styled-components", "lodash"]
    },
    "exclude": ["node_modules", ".vscode-test"],
    "include": ["./web/**/*.ts", "./web/**/*.tsx"]
}
