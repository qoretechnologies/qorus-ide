{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2021",
        "lib": ["es7", "es2017", "es2018", "es2019", "es2020", "es2021", "DOM", "dom"],
        "sourceMap": true,
        "moduleResolution": "node",
        "rootDir": "./web",
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": true,
        "jsx": "react",
        "types": ["node", "react", "react-dom", "styled-components", "lodash"]
    },
    "exclude": ["node_modules", ".vscode-test"],
    "include": ["./web/**/*.ts", "./web/**/*.tsx"]
}
