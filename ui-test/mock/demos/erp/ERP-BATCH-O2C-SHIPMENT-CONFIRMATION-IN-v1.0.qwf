%new-style

our string format_version = "2.6";

our hash<auto> groups = {
    "demo": {"desc": "demo interfaces"},
    "demo-erp": {"desc": "ERP demo interfaces"},
};

our list<auto> steps = (
    {
        "name": "erp_shipment_confirmation_validate_in:1.0",
        "desc": "validates shipment confirmation information and compares it to the original request",
        "funcname": "demo:1.0",
        "valname": "demo_val:1.0",
    },
    (
        {
            "name": "erp_shipment_confirmation_import_in:1.0",
            "desc": "imports the validated shipment confirmation data",
            "funcname": "demo:1.0",
            "valname": "demo_val:1.0",
        },
        {
            "name": "erp_shipment_confirmation_in_error_out:1.0",
            "desc": "returns errors to the external logistics provider, if any are found",
            "funcname": "demo:1.0",
            "valname": "demo_val:1.0",
        },
    ),
    {
        "name": "erp_shipment_confirmation_finalize_in:1.0",
        "desc": "sends a notification to the internal logistics group about shipment confirmation processing (success or error details, if any)",
        "funcname": "demo:1.0",
        "valname": "demo_val:1.0",
    },
);

our hash<auto> workflows."ERP-BATCH-O2C-SHIPMENT-CONFIRMATION-IN"."1.0" = {
    "desc": "Demo ERP Order to Cash shipment confirmation import workflow; imports shipment confirmations as received from logistics partners",
    "author": "Qore Technologies, s.r.o.",
    "steps": steps,
    "groups": ("demo", "demo-erp"),
    "sla_threshold": 1,
    "autostart": 1,
    "remote": False,
};
