# -*- mode: qore; indent-tabs-mode: nil -*-
# test workflow definition
#
# Qorus Integration Engine

%new-style

our string format_version = "2.6";

our hash<auto> groups = {
    "demo": {"desc": "demo interfaces"},
    "demo-erp": {"desc": "ERP demo interfaces"},
};

our list<auto> steps = (
    {
        "name": "erp_retail_gl_validate_in:1.0",
        "desc": "validates retail GL / cash movement information",
        "funcname": "demo:1.0",
        "valname": "demo_val:1.0",
    },
    (
        {
            "name": "erp_retail_gl_import_in:1.0",
            "desc": "imports the validated retail GL / cash movement data",
            "funcname": "demo:1.0",
            "valname": "demo_val:1.0",
        },
        {
            "name": "erp_retail_gl_in_error_out:1.0",
            "desc": "returns errors to the sending system, if any are found",
            "funcname": "demo:1.0",
            "valname": "demo_val:1.0",
        },
    ),
    {
        "name": "erp_retail_gl_finalize_in:1.0",
        "desc": "sends a notification to the internal logistics group about retail GL / cash movement processing (success or error details, if any)",
        "funcname": "demo:1.0",
        "valname": "demo_val:1.0",
    },
);

our hash<auto> workflows."ERP-BATCH-O2C-RETAIL-GL-IN"."1.0" = {
    "desc": "Demo ERP Order to Cash retail GL / cash movement import workflow; imports retail GL / cash movement info as received from stores",
    "author": "Qore Technologies, s.r.o.",
    "steps": steps,
    "groups": ("demo", "demo-erp"),
    "sla_threshold": 1,
    "autostart": 1,
    "remote": False,
};
