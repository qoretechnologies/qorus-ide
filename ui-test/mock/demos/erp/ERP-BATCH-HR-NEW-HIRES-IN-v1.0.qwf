%new-style

our string format_version = "2.6";

our hash<auto> groups = {
    "demo": {"desc": "demo interfaces"},
    "demo-erp": {"desc": "ERP demo interfaces"},
};

our list<auto> steps = (
    {
        "name": "erp_new_hires_validate_in:1.0",
        "desc": "validates new hires information and compares it to the original request",
        "funcname": "demo:1.0",
        "valname": "demo_val:1.0",
    },
    (
        {
            "name": "erp_new_hires_import_in:1.0",
            "desc": "imports the validated new hires data",
            "funcname": "demo:1.0",
            "valname": "demo_val:1.0",
        },
        {
            "name": "erp_new_hires_in_error_out:1.0",
            "desc": "returns errors to the external system, if any are found",
            "funcname": "demo:1.0",
            "valname": "demo_val:1.0",
        },
    ),
    {
        "name": "erp_new_hires_finalize_in:1.0",
        "desc": "sends a notification to the internal business group about new hire processing (success or error details, if any)",
        "funcname": "demo:1.0",
        "valname": "demo_val:1.0",
    },
);

our hash<auto> workflows."ERP-BATCH-HR-NEW-HIRES-IN"."1.0" = {
    "desc": "Demo ERP HR new hires import workflow; imports new hire info as received from the hiring agency",
    "author": "Qore Technologies, s.r.o.",
    "steps": steps,
    "groups": ("demo", "demo-erp"),
    "sla_threshold": 1,
    "autostart": 1,
    "remote": False,
};
