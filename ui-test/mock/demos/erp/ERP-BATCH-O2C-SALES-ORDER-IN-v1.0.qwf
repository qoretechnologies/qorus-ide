%new-style

our string format_version = "2.6";

our hash<auto> groups = {
    "demo": {"desc": "demo interfaces"},
    "demo-erp": {"desc": "ERP demo interfaces"},
};

our list<auto> steps = (
    {
        "name": "erp_sales_order_validate_in:1.0",
        "desc": "validates sales order information and compares it to the original request",
        "funcname": "demo:1.0",
        "valname": "demo_val:1.0",
    },
    (
        {
            "name": "erp_sales_order_import_in:1.0",
            "desc": "imports the validated sales order data",
            "funcname": "demo:1.0",
            "valname": "demo_val:1.0",
        },
        {
            "name": "erp_sales_order_in_error_out:1.0",
            "desc": "returns errors to the external logistics provider, if any are found",
            "funcname": "demo:1.0",
            "valname": "demo_val:1.0",
        },
    ),
    {
        "name": "erp_sales_order_finalize_in:1.0",
        "desc": "sends a notification to the internal logistics group about sales order processing (success or error details, if any)",
        "funcname": "demo:1.0",
        "valname": "demo_val:1.0",
    },
);

our hash<auto> workflows."ERP-BATCH-O2C-SALES-ORDER-IN"."1.0" = {
    "desc": "Demo ERP Order to Cash sales order import workflow; imports sales order information from external dealers",
    "author": "Qore Technologies, s.r.o.",
    "steps": steps,
    "groups": ("demo", "demo-erp"),
    "sla_threshold": 1,
    "autostart": 1,
    "remote": False,
};
