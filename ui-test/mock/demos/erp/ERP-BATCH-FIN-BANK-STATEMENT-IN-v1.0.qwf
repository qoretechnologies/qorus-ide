# -*- mode: qore; indent-tabs-mode: nil -*-
# test workflow definition
#
# Qorus Integration Engine

%new-style

our string format_version = "2.6";

our hash<auto> groups = {
    "demo": {"desc": "demo interfaces"},
    "demo-erp": {"desc": "ERP demo interfaces"},
};

our list<auto> steps = (
    {
        "name": "erp_bank_statement_validate_in:1.0",
        "desc": "validates bank statement information and compares it to reference data",
        "funcname": "demo:1.0",
        "valname": "demo_val:1.0",
    },
    (
        {
            "name": "erp_bank_statement_import_in:1.0",
            "desc": "imports the validated bank statement data",
            "funcname": "demo:1.0",
            "valname": "demo_val:1.0",
        },
        {
            "name": "erp_bank_statement_in_error_out:1.0",
            "desc": "returns errors to the external system, if any are found",
            "funcname": "demo:1.0",
            "valname": "demo_val:1.0",
        },
    ),
    {
        "name": "erp_bank_statement_finalize_in:1.0",
        "desc": "sends a notification to the internal business group about bank statement processing (success or error details, if any)",
        "funcname": "demo:1.0",
        "valname": "demo_val:1.0",
    },
);

our hash<auto> workflows."ERP-BATCH-FIN-BANK-STATEMENT-IN"."1.0" = {
    "desc": "Demo ERP Finance bank statement import workflow; imports bank statement info as received from banks",
    "author": "Qore Technologies, s.r.o.",
    "steps": steps,
    "groups": ("demo", "demo-erp"),
    "keylist": "filename",
    "sla_threshold": 1,
    "autostart": 1,
    "remote": False,
};
