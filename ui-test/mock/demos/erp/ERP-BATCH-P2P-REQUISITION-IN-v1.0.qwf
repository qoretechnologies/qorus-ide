# -*- mode: qore; indent-tabs-mode: nil -*-
# test workflow definition
#
# Qorus Integration Engine

%new-style

our string format_version = "2.6";

our hash<auto> groups = {
    "demo": {"desc": "demo interfaces"},
    "demo-erp": {"desc": "ERP demo interfaces"},
};

our list<auto> steps = (
    {
        "name": "erp_requisition_validate_in:1.0",
        "desc": "validates requisition (purchase and internal) information",
        "funcname": "demo:1.0",
        "valname": "demo_val:1.0",
    },
    (
        {
            "name": "erp_requisition_import_in:1.0",
            "desc": "imports the validated requisition (purchase and internal) data",
            "funcname": "demo:1.0",
            "valname": "demo_val:1.0",
        },
        {
            "name": "erp_requisition_in_error_out:1.0",
            "desc": "returns errors to the external logistics provider, if any are found",
            "funcname": "demo:1.0",
            "valname": "demo_val:1.0",
        },
    ),
    {
        "name": "erp_requisition_finalize_in:1.0",
        "desc": "sends a notification to the internal logistics group about requisition (purchase and internal) import processing (success or error details, if any)",
        "funcname": "demo:1.0",
        "valname": "demo_val:1.0",
    },
);

our hash<auto> workflows."ERP-BATCH-P2P-REQUISITION-IN"."1.0" = {
    "desc": "Demo ERP Procure To Pay requisition (purchase and internal) import workflow; imports requisition (purchase and internal) info as received from internal systems",
    "author": "Qore Technologies, s.r.o.",
    "steps": steps,
    "groups": ("demo", "demo-erp"),
    "sla_threshold": 1,
    "autostart": 1,
    "remote": False,
};
